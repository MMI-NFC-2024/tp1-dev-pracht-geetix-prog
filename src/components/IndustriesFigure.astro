---
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import { JSDOM } from "jsdom";
import industries from "../../industries.json" assert {type:"json"};
const { options } = Astro.props;

const plot = Plot.plot({ ...options, document: new JSDOM("").window.document });
const optionsPlot = {
    marks:[
        Plot.dot(industries, {
            x: "date",
            y: "unemployed",
            stroke: "industry",
        }),
    ],
};
---

<Layout>
	<div set:html={Plot.plot({ ...optionsPlot, document: new JSDOM("").window.document }).outerHTML} />
</Layout>